<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoppingActivity">

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="username@gmai.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Shop by Categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgElectronic"
        android:layout_width="179dp"
        android:layout_height="164dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/imgClothing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/electronic" />

    <ImageView
        android:id="@+id/imgClothing"
        android:layout_width="196dp"
        android:layout_height="165dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/colothing" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Electronic"
        app:layout_constraintEnd_toEndOf="@+id/imgElectronic"
        app:layout_constraintStart_toStartOf="@+id/imgElectronic"
        app:layout_constraintTop_toBottomOf="@+id/imgElectronic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Clothing"
        app:layout_constraintEnd_toEndOf="@+id/imgClothing"
        app:layout_constraintStart_toStartOf="@+id/imgClothing"
        app:layout_constraintTop_toBottomOf="@+id/imgClothing" />

    <ImageView
        android:id="@+id/imgBeauty"
        android:layout_width="175dp"
        android:layout_height="160dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/beauty" />

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="176dp"
        android:layout_height="161dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgBeauty"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:srcCompat="@drawable/food" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beauty"
        app:layout_constraintEnd_toEndOf="@+id/imgBeauty"
        app:layout_constraintStart_toStartOf="@+id/imgBeauty"
        app:layout_constraintTop_toBottomOf="@+id/imgBeauty" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        app:layout_constraintEnd_toEndOf="@+id/imgFood"
        app:layout_constraintStart_toStartOf="@+id/imgFood"
        app:layout_constraintTop_toBottomOf="@+id/imgFood" />
</androidx.constraintlayout.widget.ConstraintLayout>